<style>
/* Estilos del top-bar */
#top-bar {
    background-color: var(--color-primary);
    color: var(--color-text-light);
    height: var(--top-bar-height);
    display: flex;
    align-items: center;
    font-size: 0.875rem;
}

.top-bar-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.top-bar-right {
    display: flex;
    align-items: center;
    gap: 2rem;
}

#top-bar-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.5rem;
}

#top-bar-nav ul li a,
.top-bar-phone {
    color: var(--color-text-light);
    text-decoration: none;
    font-size: 0.875rem;
    transition: opacity 0.2s ease;
}

#top-bar-nav ul li a:hover,
.top-bar-phone:hover {
    opacity: 0.8;
}

/* Estilos del header principal */
#main-header {
    background-color: var(--color-text-light);
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: all 0.3s ease;
    height: 180px;
    display: flex;
    align-items: flex-start;
    padding-top: 24px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.header-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

#main-header .logo {
    display: block;
    width: 120px;
    transition: width 0.3s ease;
}

#main-header .logo svg {
    width: 100%;
    height: auto;
    color: var(--color-primary);
}

#main-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 2rem;
}

#main-nav ul li a {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 700;
    transition: opacity 0.2s ease;
}

#main-nav ul li a:hover {
    opacity: 0.8;
}

/* Estado scrolled del header */
#main-header.scrolled {
    height: 60px;
    box-shadow: var(--box-shadow-default);
}

#main-header.scrolled .logo {
    width: 80px;
}


#main-header.scrolled #main-nav ul li a {
    font-size: 0.813rem;
}

/* Botón hamburguesa (oculto por defecto) */
.hamburger-btn {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    position: relative;
    z-index: 1001;
}

.hamburger-btn span {
    display: block;
    width: 24px;
    height: 2px;
    background-color: var(--color-primary);
    margin: 5px 0;
    transition: transform 0.3s ease;
}

/* Media queries */
@media (max-width: 991px) {
    #top-bar {
        display: none;
    }

    #main-header {
        height: 60px;
    }

    #main-header .logo {
        width: 80px;
    }

    #main-header .logo svg {
        height: 35px;
    }

    #main-nav {
        position: fixed;
        top: 0;
        right: -100%;
        width: 100%;
        height: 100vh;
        background-color: var(--color-text-light);
        padding: 80px 2rem 2rem;
        transition: right 0.3s ease;
    }

    #main-nav ul {
        flex-direction: column;
        gap: 1.5rem;
    }

    #main-nav ul li a {
        font-size: 1.25rem;
    }

    .hamburger-btn {
        display: block;
    }

    /* Clase que se añade al body cuando el menú está abierto */
    :global(body.nav-open) #main-nav {
        right: 0;
    }

    /* Animación de las barras del botón hamburguesa */
    :global(body.nav-open) .hamburger-btn span:first-child {
        transform: translateY(7px) rotate(45deg);
    }

    :global(body.nav-open) .hamburger-btn span:nth-child(2) {
        opacity: 0;
    }

    :global(body.nav-open) .hamburger-btn span:last-child {
        transform: translateY(-7px) rotate(-45deg);
    }
}
</style>